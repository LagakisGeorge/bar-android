<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      tools:context=".parameters">

    <TableRow>

        <TextView
            android:id="@+id/TextView504"
            android:layout_weight="1"
            android:background="#a09f9f"
            android:gravity="center"
            android:padding="18dip"
            android:text="Νέα τιμή"
            android:textColor="#000000" />


        <EditText
            android:id="@+id/t1"
            android:layout_width="259dp"
            android:layout_height="61dp"

            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"

            android:ems="10"
            android:inputType="textPersonName" />


    </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/ip1"

            android:layout_weight="1"
            android:layout_width="100dp"
            android:background="#a09f9f"
            android:gravity="center"
            android:padding="18dip"
            android:text="ΠΕΡΙΓΡΑΦΗ"
            android:textColor="#000000" />


        <EditText
            android:id="@+id/t2"
            android:layout_width="259dp"
            android:layout_height="61dp"

            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"

            android:ems="10"
            android:inputType="textPersonName" />

    </TableRow>

    <TableRow>


        <TextView
            android:id="@+id/ip2"
            android:layout_weight="1"
            android:background="#a09f9f"
            android:gravity="center"
            android:padding="18dip"
            android:text="ΠΡΟΣΘΕΤΑ"
            android:textColor="#000000" />


        <EditText
            android:id="@+id/t4"
            android:layout_width="259dp"
            android:layout_height="61dp"

            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"

            android:ems="10"
            android:inputType="textPersonName" />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"

        android:layout_height="63dp">



        <RelativeLayout>



        <Button
            android:id="@+id/button5"
            android:layout_width="132dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="SAVE"
            android:text="ΔΙΟΡΘΩΣΗ" />

            <Button
                android:id="@+id/button6"
                android:layout_width="132dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button5"
                android:onClick="NEO_EIDOS"
                android:text="ΝΕΟ ΕΙΔΟΣ" />


            <Button
                android:id="@+id/button7"
                android:layout_width="132dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button6"
                android:onClick="DELETE"
                android:text="ΔΙΑΓΡΑΦΗ ΕΙΔΟΥΣ" />




        </RelativeLayout>

    </TableRow>

    <TableRow android:layout_height="315dp">

        <GridView
            android:id="@+id/listEidhp"
            android:layout_width="wrap_content"
            android:layout_height="245dp"
            android:layout_below="@+id/listdetail"

            android:background="#8c898f"
            android:numColumns="4" />


    </TableRow>

    <TableRow android:layout_height="315dp">

        <GridView
            android:id="@+id/listKathgp"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_below="@+id/listdetail"
            android:background="@color/colorAccent"
            android:numColumns="2" />


    </TableRow>

</TableLayout>